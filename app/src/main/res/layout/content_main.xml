<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinLayoutV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:id="@+id/LinLayoutH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVYourLists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="50dp"
            android:gravity="start"
            android:text="@string/your_lists"
            android:textColor="#7f7166"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textVRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:gravity="end|right"
            android:text="@string/register"
            android:textColor="#7f7166"
            android:textSize="18sp"
            android:clickable="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listVYourLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:longClickable="true" />

    <EditText
        android:id="@+id/editTAddList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:capitalize="words"
        android:clickable="true"
        android:inputType="textCapWords"
        android:selectAllOnFocus="false"
        android:textSize="18sp"
        android:hint="Add New List" />
</LinearLayout>

